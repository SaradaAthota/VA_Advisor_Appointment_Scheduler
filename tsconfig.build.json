{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES2021",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts",
    "frontend",
    "test-stt-standalone.ts"
  ]
}
